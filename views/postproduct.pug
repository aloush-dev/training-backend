html
    head
        title= "Add New Product"
body
h1= "Add New Product"

    form(action='/api/products' method='post')
        label(for='title')
            | Product Name:
            input(name='title' type='text', required)
        br
        label(for='brand')
            | Product Brand:
            input(name='brand' type='text', required)
        br
        button(type='submit') Submit